# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# SECURITY WARNING: Generate a new SECRET_KEY for production!
SECRET_KEY=your-secret-key-here

# Development: True, Production: False
DEBUG=True

# Add your domain and IP addresses
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,your-vps-ip

# Database Configuration
DB_NAME=domain_finder_db
DB_USER=domain_finder_user
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration
# Note: All email settings (HOST_USER, PASSWORD, FROM_EMAIL) are managed via Django Admin (ContactInfo model)

# reCAPTCHA Configuration
RECAPTCHA_PUBLIC_KEY=your-recaptcha-site-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-secret-key
RECAPTCHA_SCORE_THRESHOLD=0.5

# Production Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False

# File Upload Settings
MEDIA_ROOT=/var/www/domainfinder/media
STATIC_ROOT=/var/www/domainfinder/static

# Security Headers (Enable when using HTTPS)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True